> sub(pattern, replacement, string)
> gsub replace all matches

substr(sub("dollars","euros",sprintf("%s has %d dollars","Mark",200)),14,16)
eur

sub("-", "", sub(" ", "-", paste(paste("A", "B", sep="-"), "C")))
AB-C

!(1<2)|(2>1)&(3!=3)|(4!=4)
FALSE

!sub("-"," ","A-B-C")!=gsub("-"," ","A-B-C")
FALSE

substr("1+1",3,3)==(7-6)
TRUE

all(!!c(FALSE,FALSE,FALSE))&TRUE
FALSE
